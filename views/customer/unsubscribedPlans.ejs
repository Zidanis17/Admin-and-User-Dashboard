        <div class="flex flex-wrap justify-center mt-6">
            <h1 class="text-3xl font-semibold text-gray-800 mb-6">Unsubscribed Plans</h1>
        </div>

        
    <div class="container flex flex-wrap justify-center transition-all duration-700 mx-auto "> 
        <div class="flex flex-wrap justify-center">
            
            <% if(locals.unsubscribedPlans && unsubscribedPlans.length != 0){ %>
            <% unsubscribedPlans.forEach(unsubscribed => { %>
                <div class="bg-white border border-gray-300 rounded-lg shadow-lg m-4 w-80 p-6 cursor-pointer hover:scale-105 transition duration-500 ease-in-out ">
                    <div class="mb-4">
                        <h3 class="text-lg font-bold">
                        <%= unsubscribed.name %>
                        </h3>
                        <p class="text-gray-500">
                            <%= unsubscribed.description %>
                        </p>
                    </div>
                    <p class="text-gray-700">
                    <span class="font-semibold">Plan ID: <span class="text-indigo-500"><%= unsubscribed.planID %></span></span>
                    </p>
                    <p class="text-gray-700">
                    <span class="font-semibold">Price: <span class="text-green-600">$<%=unsubscribed.price%></span></span>
                    </p>
                    <p class="text-gray-700">
                    <span class="font-semibold">SMS Offered:</span> <%= unsubscribed.SMS_offered %>
                    </p>
                    <p class="text-gray-700">
                    <span class="font-semibold">Minutes Offered:</span> <%= unsubscribed.minutes_offered%>
                    </p>
                    <p class="text-gray-700">
                    <span class="font-semibold">Data Offered:</span> <%= unsubscribed.data_offered %>
                    </p>
                </div>
                <% }) %>
                <% } else { %>
                    <div class="bg-white shadow-lg rounded-lg p-6">
                        <p class="text-gray-600 text-center">You are subscribed to all the offered plans.</p>
                    </div>
                <% } %>
            </div>
        </div>
