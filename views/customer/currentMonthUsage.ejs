            <% if(locals.currentMonthUsage && currentMonthUsage.length != 0){ %>
                <div class="overflow-x-auto bg-white shadow-lg rounded-lg">
                    <table class="min-w-full text-left table-auto">
                    <thead class="bg-gradient-to-r from-indigo-500 to-indigo-600 text-white">
                    <tr>
                        <th class="px-4 py-4">#</th>
                        <th class="px-4 py-4 ">Plan ID</th>
                        <th class="px-4 py-4 ">SMS Sent</th>
                        <th class="px-4 py-4">Minutes Used</th>
                        <th class="px-4 py-4">Data Consumption</th>                      
                    </tr>
                    </thead>
                    <tbody>
               
                    <% currentMonthUsage.forEach((usage, index) => { %>
                        <tr class="<%= index % 2 === 0 ? 'bg-white' : 'bg-gray-200' %> bg-gray-50 hover:bg-gray-100 transition-all duration-400 ease-in-out ">
                            <td class="border-t px-4 py-4 text-sm text-start font-bold"><%= index + 1 %></td>
                            <td class="border-t px-4 py-4 text-sm font-bold"><%= usage.planID %></td>
                            <td class="border-t px-4 py-4 text-sm font-bold text-teal-500"><%= usage.SMS_sent %></td>
                            <td class="border-t px-4 py-4 text-sm font-bold text-gray-500"><%= usage.minutes_used %></td>
                            <td class="border-t px-4 py-4 text-sm font-bold text-cyan-500"><%= usage.data_consumption %></td>
                        </tr>
                    <% }); %>
                    </tbody>
                    </table>
                </div>    
            <% } else { %>
                <div class="bg-white shadow-lg rounded-lg p-6">
                    <p class="text-gray-600 text-center">You do not have any plan usage in the current month.</p>
                </div>
            <% } %>
        </div>
    </div>
    <script src="/scripts/sidebarHover.js" defer></script>
