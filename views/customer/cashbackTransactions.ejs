<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Data</title>
  <link rel="stylesheet" href="/styles.css" />
  <link rel="stylesheet" href="/styles/output.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/primeicons/6.0.1/primeicons.min.css">
</head>

<body class="bg-gray-50 font-sans">
    <%- include('partials/header') %>
    <%- include('partials/sidebar') %>

    <div class="flex flex-wrap justify-center mt-6 ">
        <h1 class="text-3xl font-semibold text-gray-800">Cashback Transactions</h1>
    </div>

    <div class="container flex flex-wrap justify-center mt-6 transition-all duration-700 mx-auto"> 
        
        <div class="container ml-[80px] mb-6">
        
            <% if(locals.cashbackTransactions && cashbackTransactions.length != 0){ %>
                <div class="overflow-x-auto bg-white shadow-lg rounded-lg">
                    <table class="min-w-full text-left table-auto">
                    <thead class="bg-gradient-to-r from-indigo-500 to-indigo-600 text-white">
                    <tr>
                        <!-- <th class="px-4 py-4">#</th> -->
                        <th class="px-4 py-4 ">Cashback ID</th>
                        <th class="px-4 py-4">Benefit ID</th>
                        <th class="px-4 py-4">Wallet ID</th>
                        <th class="px-4 py-4">Amount</th>
                        <th class="px-4 py-4">Credit Date</th>                      
                    </tr>
                    </thead>
                    <tbody>
               
                    <% cashbackTransactions.forEach((cashback, index) => { %>
                        <tr class="<%= index % 2 === 0 ? 'bg-white' : 'bg-gray-200' %> bg-gray-50 hover:bg-gray-100 transition-all duration-400 ease-in-out ">
                            <!-- <td class="border-t px-4 py-4 text-sm"><%= index + 1 %></td> -->
                            <td class="border-t px-4 py-4 text-sm text-start font-bold"><%= cashback.cashbackID %></td>
                            <td class="border-t px-4 py-4 text-sm font-semibold text-cyan-500"><%= cashback.benefitID %></td>
                            <td class="border-t px-4 py-4 text-sm font-semibold text-gray-500"><%= cashback.walletID %></td>
                            <td class="border-t px-4 py-4 text-sm font-semibold text-green-600">$<%= cashback.amount %></td>
                            <td class="border-t px-4 py-4 text-sm"><%= new Date(cashback.credit_date).toLocaleDateString('en-GB')%></td>
                        </tr>   
                    <% }); %>
                    </tbody>
                    </table>
                </div>    
            <% } else { %>
                <div class="bg-white shadow-lg rounded-lg p-6">
                    <p class="text-gray-600 text-center">You do not have any cashback transactions.</p>
                </div>
            <% } %>
        </div>
    </div>
</body>

</html>