<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Physical Shops</title>
    <link rel="stylesheet" href="/styles.css" />
    <link rel="stylesheet" href="/styles/output.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/primeicons/6.0.1/primeicons.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 font-sans">

<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<div class="container mx-auto p-6 ml-[113px]">
    <h1 class="text-3xl font-semibold text-gray-800 mb-6">Physical Shops</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% shops.forEach(shop => { %>
            <div class="bg-white rounded-lg shadow-lg overflow-hidden border border-gray-200 hover:shadow-xl transition-shadow duration-300">
                <div class="p-6">
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">
                        Shop ID: <%= shop.shopID %>
                    </h3>
                    <p class="text-gray-600 mb-4">
                        <span class="font-semibold">Address:</span> <%= shop.address %>
                    </p>
                    <p class="text-gray-600">
                        <span class="font-semibold">Working Hours:</span> <%= shop.working_hours %>
                    </p>
                </div>
                <div class="p-4 bg-gray-100 border-t border-gray-200">
                    <button
                            class="w-full py-2 text-white bg-indigo-500 hover:bg-indigo-600 rounded-md transition-colors duration-300"
                            onclick="window.location.href='/admin/dashboard/physical-shops/<%= shop.shopID %>'"
                    >
                        View Details
                    </button>

                </div>
            </div>
        <% }); %>
    </div>
</div>

</body>
</html>
