<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop Details</title>
    <link rel="stylesheet" href="/styles.css" />
    <link rel="stylesheet" href="/styles/output.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/primeicons/6.0.1/primeicons.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 font-sans">

<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<div class="container mx-auto p-6 ml-[113px]">
    <h1 class="text-3xl font-semibold text-gray-800 mb-6">Shop Details</h1>

    <div class="bg-white rounded-lg shadow-lg p-6 mb-6 border border-gray-200">
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">
            Shop ID: <%= shop.shopID %>
        </h2>
        <p class="text-gray-600 mb-2">
            <span class="font-semibold">Address:</span> <%= shop.address %>
        </p>
        <p class="text-gray-600 mb-2">
            <span class="font-semibold">Working Hours:</span> <%= shop.working_hours %>
        </p>
    </div>

    <h3 class="text-xl font-semibold text-gray-800 mb-4">Vouchers Redeemed</h3>
    <% if (vouchers.length > 0) { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            <% vouchers.forEach(voucher => { %>
                <div class="bg-white rounded-lg shadow-md p-4 border border-gray-200">
                    <p class="text-gray-800 font-semibold">Voucher ID: <%= voucher.voucherID %></p>
                    <p class="text-gray-600">Value: <%= voucher.value %></p>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <p class="text-gray-600">No vouchers available for this shop.</p>
    <% } %>
</div>

</body>
</html>
