<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Data</title>
  <link rel="stylesheet" href="/styles.css" />
  <link rel="stylesheet" href="/styles/output.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/primeicons/6.0.1/primeicons.min.css">
</head>

<body class="bg-gray-100 font-sans">
  <%- include('partials/header') %>
  <%- include('partials/sidebar') %>
  <div class="container mx-auto p-6 ml-[113px]">
    <h1 class="text-3xl font-semibold text-gray-800 mb-6">Payments</h1>
    <div class="overflow-x-auto bg-white shadow-lg rounded-lg">
      <table class="min-w-full text-left table-auto">
        <thead class="bg-gradient-to-r from-indigo-500 to-indigo-600 text-white">
          <tr>
            <th class="px-4 py-4">#</th>
            <th class="px-4 py-4 ">Payment ID</th>
            <th class="px-4 py-4 ">Amount</th>
            <th class="px-4 py-4">Date of Payment</th>
            <th class="px-4 py-4">Payment Method</th>
            <th class="px-4 py-4">Status</th>
            <th class="px-4 py-4">Mobile Number</th>
          </tr>
        </thead>
        <tbody>
          <% payments.forEach((payment, index)=> { %>
          <tr class="<%= index % 2 === 0 ? 'bg-gray-50' : 'bg-white' %> hover:bg-gray-100 transition-all duration-400 ease-in-out ">
            <td class="border-t px-4 py-4 text-sm">
              <%= index + 1 %>
            </td>
            <td class="border-t px-4 py-4 text-sm">
              <%= payment.paymentID %>
            </td>
            <td class="border-t px-4 py-4 text-sm">
              $<%= payment.amount.toFixed(2) %>
            </td>
            <td class="border-t px-4 py-4 text-sm">
              <%= new Date(payment.date_of_payment).toLocaleDateString('en-GB') %>
            </td>
            <td class="border-t px-4 py-4 text-sm font-semibold">
              <span class="inline-block <%= payment.payment_method === 'cash' ? 'bg-green-100' : 'bg-blue-100' %> text-sm font-semibold px-3 py-1 rounded-md">
                <%= payment.payment_method.toUpperCase() %>
              </span>
            </td>
            <td class="border-t px-4 py-4 text-sm">
              <span class="inline-block <%= payment.status === 'successful' ? 'bg-green-100' : (payment.status === 'pending' ? 'bg-orange-100' : 'bg-red-100') %> text-sm font-semibold px-3 py-1 rounded-md">
                <%= payment.status.toUpperCase() %>
              </span>
            </td>
            <td class="border-t px-4 py-4 text-sm">
              <%= payment.mobileNo %>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</body>

</html>